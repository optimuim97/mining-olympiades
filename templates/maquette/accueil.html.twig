                            <div class="row gap-2">
                                <div class="col-8 ligne">Football</div>
                                <div class="col-3 ligne">Dames</div>
                                <div class="col-5 ligne">1500 m</div>
                                <div class="col-6 ligne">Awalé</div>
                                <div class="col-6 ligne">Cyclisme</div>
                                <div class="col-5 ligne">Volleyball</div>
                                <div class="col-4 ligne">Ludo</div>
                                <div class="col-7 ligne">Petits poteaux</div>
                                <div class="col-7 ligne">Course en sac</div>
                                <div class="col-4 ligne">Marathon</div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>


    </main>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="/assets/js/carousel.js"></script>
{% endblock %}