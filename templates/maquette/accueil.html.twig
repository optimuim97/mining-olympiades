                            <a href="{{ path('app_maquette_page', {'slug': 'participation'}) }}" class="bouton">Participer</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="zonePresentation">
            <section id="presentation">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 col-lg-8 col-xl-7 text-center"  data-aos="fade-up" data-aos-duration="2500" data-aos-delay="100">
                        <h3 class="rubrique"><span>--</span> Présentation <span>--</span></h3>
                        <h1 class="titre">Les Mining Olympiades</h1>
                        <p>
