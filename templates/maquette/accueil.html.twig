{% extends 'maquette_layout.html.twig' %}
{% block title %}Maquette{% endblock %}
{% block body %}
    <main>
        <div class="zoneCarousel">
            <section id="carousel">
                <div class="container carousel-container">
                    <div class="carousel"  data-aos="fade-right" data-aos-duration="1500">
                        <div class="carousel-elt">
                            <h1>Mining Olympiades 2024</h1>
                            <h2>Thème: <span>Valorisons nos régions</span></h2>
                            <h3>Les 15 et 16 décembre 2023 à Yamoussoukro</h3>
                            <a href="{{ path('app_maquette_page', {'slug': 'participation'}) }}" class="bouton">Participer</a>
                        </div>
                        <div class="carousel-elt">
                            <h1>Mining Olympiades 2024</h1>
                            <h2>C'est une <span>Journée scientifique</span></h2>
                            <h3>sous le thème: <span class="theme">Le teme</span></h3>
                            <a href="{{ path('app_maquette_page', {'slug': 'participation'}) }}" class="bouton">Participer</a>
                        </div>
                        <div class="carousel-elt">
                            <h1>Mining Olympiades 2024</h1>
                            <h2>Ce sont des <span>compétitions sportives</span> </h2>
                            <h3>dans plus de 20 displines </h3>
